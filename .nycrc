{
  "all": true,
  "temp-dir": "target/.nyc_output",
  "report-dir": "target/coverage",
  "cache-dir": "target/.cache",
  "exclude-after-remap": false,
  "extension": [".ts"],
  "include": ["api/**/*.ts"],
  "exclude": [
    "api/color/index.ts",
    "api/color/run.ts",
    "api/refresh/index.ts"
  ],
  "require": ["ts-node/register"],
  "reporter": [
    "lcov",
    "text",
    "clover"
  ]
}
